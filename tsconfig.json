{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "es2017",
        "es2018.promise"
      ],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "importHelpers": true,
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "allowJs": true,
      "declaration": true,
      "outDir": "./dist"
    },
    "exclude": [
      "node_modules",
      "dist",
      "tmp"
    ],
    "include": [
      "./src/**/*"
    ],
  }